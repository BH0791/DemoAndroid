<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools = "http://schemas.android.com/tools"
            xmlns:app = "http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:orientation="vertical" >
<LinearLayout
        
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        >
    <!-- Utilisation des boutons
Avant de pouvoir utiliser les boutons Material, vous devez ajouter une dépendance à la bibliothèque
Material Components for Android. Pour plus d'informations, consultez la page Prise en main.
Remarque : <Button> est gonflé automatiquement en tant que <com.google.android.material.button.MaterialButton>
via MaterialComponentsViewInflater lors de l'utilisation d'un thème Theme.Material3.*. -->
    <com.google.android.material.textview.MaterialTextView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text="@string/indication"
            android:layout_margin="10dp"
            app:fontFamily="@font/rubik_light"
            />
    <Button
            style="@style/Widget.App.Button"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text="Simple button"
            />
    
    <com.google.android.material.button.MaterialButton
            android:text = "Simple button M3"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/button2"
            app:icon="@drawable/ic_pers"
            />
    
    <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/elevatedButton"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text="Elevation button-style"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_pers"
            />
    
    <Button
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:id="@+id/elevatedButtonIcon"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text="Elevation button icon-style"
            app:icon="@drawable/ic_add"
            />
    
    <Button
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:id="@+id/filledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filled button"
            app:icon="@drawable/ic_pers"
            android:textColor="?attr/colorOnPrimary"
            />
    <Button
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:id="@+id/filledTonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filled tonal button"
            app:icon="@drawable/ic_pers"
            />
    
    <Button
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:id="@+id/outlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outlined button"
            app:icon="@drawable/ic_pers"
            />
    <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:id="@+id/outlinedButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outlined button"
            app:icon="@drawable/ic_pers"
            app:iconSize="15sp"
            app:iconGravity="textEnd"
            />
    
    <com.google.android.material.button.MaterialButton
            style = "@style/Widget.Material3.Button.TextButton.Icon"
            android:id = "@+id/textButton"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Text button"
            app:icon = "@drawable/ic_pers"
            app:shapeAppearance = "?attr/shapeAppearanceSmallComponent"
            app:rippleColor = "?attr/colorOnSurface"
            android:fontFamily = "@font/rubik_light"
            />
    <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        
        <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_etout"
                />
        <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button 2"
                />
        <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_etout"
                />
    </com.google.android.material.button.MaterialButtonToggleGroup>
    
    <CheckBox
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/sl_favourite_24dp"
            app:buttonTint="@android:color/black"
            />
    <Button
            style="?attr/materialIconButtonOutlinedStyle"
            android:id="@+id/iconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <ImageView
            android:layout_width = "400dp"
            android:layout_height = "400dp"
            android:src="@drawable/unnamed"/>

</LinearLayout >
</ScrollView>