<resources xmlns:tools = "http://schemas.android.com/tools" >
    
    <!-- Base application theme. -->
    <style name = "Theme.TipTime" parent = "Theme.MaterialComponents.DayNight.DarkActionBar" >
        <!-- Primary brand color. -->
        <item name = "colorPrimary" >@color/green</item >
        <item name = "colorPrimaryVariant" >@color/green_dark</item >
        <item name = "colorOnPrimary" >@color/white</item >
        <!-- Secondary brand color. -->
        <item name = "colorSecondary" >@color/blue</item >
        <item name = "colorSecondaryVariant" >@color/blue_dark</item >
        <item name = "colorOnSecondary" >@color/black</item >
        <!-- Status bar color. -->
        <item name = "android:statusBarColor" tools:targetApi = "l" >?attr/colorPrimaryVariant</item >
        <!-- Customize your theme here. -->
        <item name = "colorOnSecondaryContainer" >@color/Orange</item >
        <item name = "colorSecondaryContainer" >@color/Tan</item >
        <!-- Tertiary brand color -->
        <item name = "colorTertiary" >#916EFF</item >
        <item name = "colorOnTertiary" >#1C1237</item >
        <item name = "colorTertiaryContainer" >#DFAD61</item >
        <item name = "colorOnTertiaryContainer" >#D2C2FD</item >
        <!-- Error brand color -->
        <item name = "colorErrorContainer" >#EC5085</item >
        <item name = "colorOnErrorContainer" >#981C46</item >
        <item name = "colorError" >#571A61</item >
        <!-- Surface brand color -->
        <item name = "colorSurface" >#571A61</item >
        <item name = "colorOnSurface" >#571A61</item >
        <item name = "colorSurfaceContainer" >#571A61</item >
        <item name = "colorSurfaceContainerLowest">#15FFAB</item>
        <item name = "colorSurfaceContainerLow">#FA5DB4</item>
        <item name = "colorSurfaceContainerHigh">#5487DB</item>
        <item name = "colorSurfaceContainerHighest">#748563</item>
        <!-- Inverse colors -->
        <item name = "colorSurfaceInverse">#FFEB3B</item>
        <item name = "colorOnSurfaceInverse">#B5AD65</item>
        <item name = "colorPrimaryInverse">#857A1D</item>
    </style >

</resources >